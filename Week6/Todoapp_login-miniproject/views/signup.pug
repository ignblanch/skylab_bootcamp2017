extends ./index

block content
  .container
  h1 Create new user
  form.signup-form(action="signup" method="POST")
    div.form-group
      label(for="username") Email address:
      input.form-control(type="text" name="username")
      label(for="password") Password: 
      input.form-control(type="password" name="password")
    button.btn.btn-info(type="submit") Create User