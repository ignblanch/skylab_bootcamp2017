extends ../layout

block content
  .jumbotron
    p Welcome to todoApp.Please enjoy
    h1 TODO List
    .container
      form.main-form(action="tasks", method="POST")
        button(type="button").alldone.btn.btn-lg.btn-success all done
        input.input-lg(name="title" placeholder="Enter todo" autofocus)
        button.btn.btn-lg.btn-primary Add TODO
      if tasks.length===0
        p Congrats! You're all clear
      else
      ul.list-group.mainList
        each task, i in tasks
          if !task.done
            li.list-group-item
              .container
                input.edit(style="display:none" type="text" name='edit' value=task.title)
                input.todoId(style="display:none" type="text" name='edit' value=task._id)
                button.pull-left.complete.btn.btn-success.btn-lg Complete task
                button.pull-right.remove.btn.btn-danger.btn-lg Remove task
                p.list-item #{task.title}
                p#date created on #{task.createdAt}
            